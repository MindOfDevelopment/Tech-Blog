<div class='row mt-4'>
  <div class='col-md-6'>
    <h3>Update Post:</h3>

    <form class='form edit-post-form' data-id='{{id}}'>
      <div class='form-group'>
        <label for='post-name'>Post Title:</label>
        <input
          class='form-input'
          type='text'
          id='post-title'
          name='post-title'
          value='{{title}}'
        />
      </div>

      <div class='form-group'>
        <label for='post-desc'>Post Content:</label>
        <textarea
          class='form-input'
          id='post-content'
          name='post-content'
        >{{content}}</textarea>
      </div>
      <div class='form-group'>
        <button type='submit' class='btn btn-primary'>Update</button>
      </div>
    </form>
  </div>

</div>

{{#if logged_in}}
  <script src='../../js/updatePost.js'></script>
{{/if}}