<!-- Loop over each object in the posts array -->
{{#each posts as |post|}}
  <div class='post-container'>
    <div class='post-header'>
      <h2>
        <a href='/posts/{{post.id}}'>{{post.title}}</a>
      </h2>

      <p>Created by
        {{post.user.username}}
        on
        {{format_date post.createdAt}}</p>
    </div>
    <div class='post-content'>
      <p>
        {{post.content}}
      </p>
    </div>
  </div>
{{/each}}